{
    "manifest_version": 3,
    "name": "My PR Viewer",
    "version": 1.0,
    "description": "List all open PR for a user",
    "permissions": [
        "storage",
        "alarms",
        "https://api.github.com"
    ],
    "host_permissions": ["https://github.cloud.capitalone.com"],
    "action": {
        "default_pop": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }        
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}