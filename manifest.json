{
    "manifest_version": 3,
    "name": "GitHub PR Lister",
    "version": "1.0",
    "description": "Lists all open pull requests for a given GitHub user.",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://api.github.com/"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  